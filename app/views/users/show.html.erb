<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
    <h3><%= link_to("Followings", followings_user_path) %> (<%= @followings.count %>)</h3>
    <% if @followings.any? %>
      <ol class="relationships">
        <% @followings.each do |following| %>
          <%= render partial: 'relationships/following', locals: {following_relationship: following} %>
        <% end %>
      </ol>
    <% end %>
    <h3><%= link_to("Followers", followers_user_path) %> (<%= @followers.count %>)</h3>
    <% if @followers.any? %>
      <ol class="relationships">
        <% @followers.each do |follower| %>
          <%= render partial: 'relationships/follower', locals: {follower_relationship: follower} %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>