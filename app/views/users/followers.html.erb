<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <h3>Followers (<%= @followers.count %>)</h3>
    <% if @followers.any? %>
      <ol class="relationships">
        <% @followers.each do |follower| %>
          <%= render partial: 'relationships/follower', locals: {follower_relationship: follower} %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>