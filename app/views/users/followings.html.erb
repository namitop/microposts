<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Following (<%= @user.following_relationships.count %>)</h3>
    <% if @user.following_relationships.any? %>
      <ol class="following_relationships">
        <% @user.following_relationships.order(created_at: :desc).each do |following_relationship| %>
          <%= render partial: 'relationships/following_relationship', locals: {following_relationship: following_relationship} %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>