<%= form_for(@user) do |f| %>
  <% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  
  名前:
  <%= f.text_field :name %>

  内容:
  <%= f.text_field :email %>
  
  場所:
  <%= f.text_field :residence %>
  
  詳細:
  <%= f.text_field :detail %>
  

  新しいパスワードを設定する場合＞現在のパスワードを入力：
  <%= f.password_field :password_for_edit %>

  新しいパスワードを設定：
  <%= f.password_field :new_password %>
  
  新しいパスワードの確認：
  <%= f.password_field :new_password_confirmation %>
  

  
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>